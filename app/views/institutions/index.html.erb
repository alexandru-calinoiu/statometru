<h1>Institutii</h1>

<%= form_tag('/find', :method => "get") do %>
    <%= text_field_tag :search_term %>
    <%= text_field_tag :search_location %>
    <%= submit_tag 'Search' %>
<% end %>

<% if @institutions %>
    <% if @institutions.blank? %>
        <div>Cautarea nu a returnat nimic</div>
    <% else %>
        <% @institutions.each do |institution| %>
            <p>
              <%= link_to institution.name, "/institutie/#{institution.id}" %>
              <%= "| #{institution.location.name}" unless institution.location.nil? %>
            </p>
        <% end %>
        <%= will_paginate @institutions %>
    <% end %>
<% else %>
    <div>Trebuie sa introduci cel putin un cuvant</div>
<% end %>
