<% if @institutions %>
    <% if @institutions.blank? %>
        <div>Cautarea nu a returnat nimic</div>
    <% else %>
        <ul id="search">
          <% @institutions.each do |institution| %>
              <li>
                <%= link_to institution.name, "/institutie/#{institution.id}", :class => "institution" %>
                <%= " #{institution.location.name}" unless institution.location.nil? %>
                &raquo;
                <%= "#{institution.category.name}" unless institution.category.nil? %>
                &raquo;
                <%= "#{institution.category.name}" unless institution.category.nil? %>
                <span class="meta"><%= "#{institution.rating} voturi" %></span>
              </li>
          <% end %>
        </ul>
        <%= will_paginate @institutions %>
    <% end %>
<% else %>
    <div>Trebuie sa introduci cel putin un cuvant</div>
<% end %>
