<h1>Search#search</h1>

<%= form_for(:search, :html => { :method => :get }) do |f| %>
    <%= f.text_field :search_term %>
    <%= f.submit 'search' %>
<% end %>

<% if @institutions %>
    <% if @institutions.blank? %>
        <div>Cautarea nu a returnat nimic</div>
    <% else %>
        <% @institutions.each do |institution| %>
            <p><%= institution.name %></p>
        <% end %>
        <%= will_paginate @institutions %>
    <% end %>
<% else %>
    <div>Trebuie sa introduci cel putin un cuvant</div>
<% end %>
